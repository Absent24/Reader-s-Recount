datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id           String     @id @default(uuid())
  clerkId      String     @unique
  firstName    String?
  lastName     String?
  username     String
  email        String
  profileImage String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  reviews      Review[]
}

model Book {
  id             String  @id @default(uuid())
  bookKey            String  @unique
  title          String
  author         String
  authorKey      String
  firstPublish   Int
  numOfPages     Int
  coverId        Int?
  openlibRating  Float?
  openlibNumRating Int?
  rrRating       Float?
  rrNumRating    Int?
  image          String
  reviews        Review[]
}

model Review {
  id          String @id @default(uuid())
  profile     Profile @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  profileId   String
  book        Book @relation(fields: [bookKey], references: [bookKey])
  bookKey     String
  rating      Int
  title       String
  review      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}